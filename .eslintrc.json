{
    "env": {
        "browser": true
    },
    "extends": [
        "airbnb-base", 
        "plugin:vue/vue3-recommended"
    ],
    "rules": {
        "vue/component-definition-name-casing": ["error", "kebab-case"],
        "no-param-reassign": 0,
        "arrow-parens": ["error", "always"],
        "indent": ["error", 2, {
            "MemberExpression": 2,
            "CallExpression": { "arguments": 2 },
            "ArrayExpression": 2,
            "ignoredNodes": [
                "ConditionalExpression"
            ]
        }]
    }
}
